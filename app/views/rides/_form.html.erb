<% if @current_user.school == "pomona" %>
  <div class="message is-info">
    <div class="message-header">
      As a Pomona Student, you're eligible for a free ride over winter break!
    </div>
    <div class="message-body">
      <div class="field is-grouped">
        <p class="control">
          <input type="checkbox" id="aspc-checkbox" />
        </p>
        <label class="label help">I would like to request a free ride to ONT/LAX funded by ASPC (<strong>December 19 - 21</strong>).</label>
      </div>
      <p class="is-size-7">
        <ul>
          <li>- You MUST be a Pomona College student.</li>
          <li>- Due to vehicle space limitations, we ask you limit the number of suitcases/luggage to 2 large items or 1 large + 2 small items</li>
          <li>- Not all departure times may receive transportation; this form’s purpose is to determine which Sagecoach and Sagehen Shuttle times should be finalized based on student ride demand!</li>
          <li>- Again, filling out this form does NOT guarantee a ride!!!</li>
        </ul>
        <br />
        <br />
        We will work to notify you of your assigned time as fast as we can. Thank you for your patience!
        <br />
        <br />
        Any comments, questions, or concerns can be sent to <a href="mailto:operations@aspc.pomona.edu">operations@aspc.pomona.edu</a>.
      </p>
    </div>
  </div>
<% end %>

<div id="non-aspc-free">
  <%= form_for(@ride) do |f| %>
    <% if @ride.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@ride.errors.count, "error") %></h2> prohibited this ride from being saved:

        <ul>
          <% @ride.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.hidden_field :is_aspc, :value => "false" %>
    </div>

    <div class="field">
      <%= f.label "Where are you going?", :class => 'label' %>
      <div class="control">
        <%= f.select :airport, ["To LAX", "To Ontario", "From LAX", "From Ontario"], {:selected => "2" }, {:class => 'select'} %>
      </div>
    </div>
    <div class="field">
      <%= f.label "What terminal are you going to?", :class => 'label' %>
      <div class="control">
        <%= f.select :terminal, 1...7, {:selected => "1" }, {:class => 'select'} %>
      </div>
    </div>
    <div class="field">
      <%= f.label "When is your flight?", id: "js-flight-label", :class => 'label' %>
      <div class="control">
        <%= f.datetime_select :flighttime, { :order => [:day, :month, :year], :prompt => {:day => 'day', :month => "month", :year => "year", :hour => "hour", :minute => "minute", }, :ampm => true, :minute_step => 15, :start_year => 2019, :end_year => 2020 }, { :class => 'select' } %>
      </div>
    </div>
    <div class="field time-div">
      <%= f.label "When is the earliest time you’d be willing to leave for your flight?", :class => 'label' %>
      <div class="control">
        <%= f.datetime_select :ridetime, { :order => [:day, :month, :year], :prompt => {:day => 'day', :month => "month", :year => "year", :hour => "hour", :minute => "minute", }, :ampm => true, :minute_step => 15, :start_year => 2019, :end_year => 2020 }, { :class => 'select' } %>
      </div>
    </div>
    <div class="field">
      <%= f.label "What is your phone number?", :class => 'label' %>
      <div class="control">
        <%= number_field_tag :phone_number %>
      </div>
    </div>
    <br />
    <div class="control">
      <%= f.submit :class => 'button is-primary' %>
    </div>
  <% end %>
</div>

<div id="aspc-free" style="display: none;">
  <%= form_for(@ride) do |f| %>
    <% if @ride.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@ride.errors.count, "error") %></h2> prohibited this ride from being saved:

        <ul>
          <% @ride.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.hidden_field :is_aspc, :value => "true" %>
    </div>

    <div class="field">
      <%= f.label "Where are you going?", :class => 'label' %>
      <div class="control">
        <%= f.select :airport, ["To LAX", "To Ontario"], {:selected => "2" }, {:class => 'select'} %>
      </div>
    </div>
    <div class="field">
      <%= f.label "What terminal are you going to?", :class => 'label' %>
      <div class="control">
        <%= f.select :terminal, 1...7, {:selected => "1" }, {:class => 'select'} %>
      </div>
    </div>
    <div class="field">
      <%= f.label "When is your flight?", id: "js-flight-label", :class => 'label' %>
      <div class="control">
        <%= f.datetime_select :flighttime, { :order => [:day, :month, :year], :prompt => {:day => 'day', :month => "month", :year => "year", :hour => "hour", :minute => "minute", }, :ampm => true, :minute_step => 15, :start_year => 2018, :end_year => 2019 }, { :class => 'select' } %>
      </div>
    </div>

    <div class="field" id="existing-aspc-rides-section">
      <%= f.label "Are any of these ride times suitable for your schedule?", :class => "label" %>
      <div class="control">
        <div class="select">
          <%= f.select :existing_aspc_ride, [], {:selected => "0"}, {:id => "existing-aspc-rides"} %>
        </div>
      </div>
    </div>

    <div class="field time-div" id="aspc-custom-ride-section">
      <%= f.label "If none of the above rides work, when is the earliest time you’d be willing to leave for your flight?", :id => "aspc-custom-ride-label", :class => "label" %>
      <div class="control">
        <%= f.datetime_select :ridetime, { :order => [:day, :month, :year], :prompt => {:day => 'day', :month => "month", :year => "year", :hour => "hour", :minute => "minute", }, :ampm => true, :minute_step => 15, :start_year => 2018, :end_year => 2019 }, { :class => 'select' } %>
      </div>
    </div>

    <div class="field">
      <%= f.label "What is your phone number?", :class => 'label' %>
      <div class="control">
        <%= number_field_tag :phone_number %>
      </div>
    </div>

    <br />
    <div class="control">
      <%= f.submit :class => 'button is-primary' %>
    </div>
  <% end %>


</div>

<script>
  (function() {
      function displayExistingASPCRides(airport) {
          $.get("/5crideshare/rides/aspc_rides.json", {airport: airport}, function (data) {
              $("#existing-aspc-rides").html("");
              $.each(data, function (index, value) {
                  let rt = new Date(value.ridetime);
                  let ridetime = rt.toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "long",
                      weekday: "long",
                      day: "numeric",
                      hour: "numeric",
                      minute: "numeric"
                  });

                  $("#existing-aspc-rides").append(
                      $(`<option>`, {value: value.id})
                      .text(ridetime)
                  );
              });

              if ($("#existing-aspc-rides").children().length == 0) {
                  $("#aspc-custom-ride-label").text("When is the earliest time you’d be willing to leave for your flight?");

                  $("#existing-aspc-rides-section").hide();
                  $("#aspc-custom-ride-section").show();
              } else {
                  $("#existing-aspc-rides")
                      .prepend(
                          $(`<option>`, {value: ""})
                          .text("Select a ride which works for you")
                      )
                      .find("option:eq(0)").prop("selected", true);

                  $("#aspc-custom-ride-label").text("If none of the above options work, When would you like your ride to leave?");

                  $("#existing-aspc-rides-section").show();
                  $("#aspc-custom-ride-section").show();
              }
          });
      }

      function getSelectedAirport() {
          let airport = $("#aspc-free").find("#ride_airport").val();
          return airport;
      }


      let nonAspcForm = $("#non-aspc-free")[0];
      let aspcForm = $("#aspc-free")[0];
      let aspcCheckbox = $("#aspc-checkbox");
      aspcCheckbox.click(function () {
          nonAspcForm.style.display = aspcCheckbox[0].checked ? "none" : "block";
          aspcForm.style.display = aspcCheckbox[0].checked ? "block" : "none";

          if (aspcCheckbox[0].checked) {
              $("#existing-aspc-rides-section").hide();
              $("#aspc-custom-ride-section").hide();

              let airport = getSelectedAirport();
              displayExistingASPCRides(airport);
          }
      });

      $("#aspc-free").find("#ride_airport").change(function () {
          let airport = getSelectedAirport();
          displayExistingASPCRides(airport);
      });
  })();
</script>