<%= form_for([@ride, @ride.comments.build]) do |f| %>
  <%= f.text_area :comment, :class => "textarea", :placeholder => "Any comment you post will be public" %>
  <%= f.hidden_field :user_id, :value => @current_user.id %>
  <br />

  <%= f.submit "Post comment", :class => "button is-light is-small" %>
<% end %>