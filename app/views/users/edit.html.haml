#edit-user
  =form_for(@current_user) do |f|
    -if @current_user.errors.any?
      #error_explanation
        %h2= pluralize(@ride.errors.count, "error")
        prohibited this ride from being saved:
        %ul
        -@ride.errors.full_messages.each do |msg|
          %li= msg

    .field
      = f.label "Name"
      = f.text_field :name
    .field
      = f.label "Email"
      = f.text_field :email
    .field.time-div
      = f.label "Would you like to receive email notifications?"
      = f.check_box :email_pref
    .actions
      = f.submit
    
