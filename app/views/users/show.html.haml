#user-rides.rides
  #arrivals
    %h1 Arrivals
    #aflight-header
      %h2 Date
      %h2.aftime= "Shuttle Arrival Time"
      %h2.anumpass= "Riders"
      .clear
      
    -if @arrivals
      -@arrivals.each do |ride| 
        .ride-container
          .aride-info
            %p.flight-date= ride.flighttime.strftime("%B %d %Y")
            %p.flight-time= ride.flighttime.strftime("%I:%M %p")
            %p.ride-count= ride.users.size
            = link_to '', ride
  #departures
    %h1 Departures
    #dflight-header
      %h2 Date
      %h2.dftime= "Flight Departure Time"
      %h2.drtime Ride Time
      %h2.dnumpass= "Riders"
      .clear
      
      
    -if @departures
      -@departures.each do |ride| 
        .ride-container
          .dride-info
            %p.flight-date= ride.flighttime.strftime("%B %d %Y")
            %p.flight-time= ride.flighttime.strftime("%I:%M %p")
            -if ride.ridetime
              %p.ride-time= ride.ridetime.strftime("%I:%M %p")
            -else
              %p.ride-time Currently Unspecified 
            %p.ride-count= ride.users.size
            = link_to '', ride
            .clear