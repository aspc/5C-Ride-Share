<!DOCTYPE html>
<html>
<head>
  <title><%=@title%></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta property="fb:app_id" content="300857556614018"/>
</head>
<body>
  <div id="fb-root"></div>

  <script>
    var current_user_id = <%= 
      if @current_user 
        @current_user.id
      else -1 
      end%>
  </script>
    
  <%= render 'layouts/header'%>
  
  <div class = "main-container">
    
    <%if flash[:notice]%>
    <p class = "notice">
      <%=notice%>
    </p>
    <%end%>
    <%if flash[:end]%>
    <p class = "alert">
      <%=alert%>
    </p>
    <%end%>
    
    <%= yield %>
  </div>

  <%= render 'layouts/footer'%>
  <%= render 'layouts/ga' if Rails.env.production?%>
</body>
</html>
