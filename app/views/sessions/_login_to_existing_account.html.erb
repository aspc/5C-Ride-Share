<%= form_tag({controller: "sessions", action: "create_via_credentials"}, method: "get") do %>
  <div class="field">
    <label class="label">Email</label>
    <div class="control">
      <%= text_field_tag :email, nil, :placeholder => "email", :class => "input" %>
    </div>
  </div>
  <div class="field">
    <label class="label">Password</label>
    <div class="control">
      <%= password_field_tag :password, nil, :placeholder => "password", :class => "input" %>
    </div>
  </div>
  <%= submit_tag "Sign in", :class => "button is-info" %>
<% end %>